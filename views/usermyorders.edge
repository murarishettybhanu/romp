                    @endeach
                </td>
                <td>{{order.totalPrice}}</td>
                <td>{{order.ordertype}}</td>
                <td>{{order.status}}</td>
                <td>
                    @if(order.status=='Pending')
                    <a href="/cancel/{{order._id}}" class="btn btn-danger">Cancel</a><br>
                    @endif
                    @if(order.status == 'Delivered' )
                    <a href="/bill/{{order._id}}" class="btn btn-primary" style="color: white;">Bill</a>
